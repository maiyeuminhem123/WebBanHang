@model Bai3_WebBanHang.Models.Category

@{
    ViewData["Title"] = "Tạo Danh Mục Mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="control-label">Tên Danh Mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="control-label">URL Hình Ảnh</label>
                <input asp-for="ImageUrl" class="form-control" id="imageUrlInput" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <img id="imagePreview" src="https://placehold.co/200x200?text=Image+Preview" alt="Image Preview" style="width: 200px; height: 200px; object-fit: cover; border: 1px solid #ddd;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('imageUrlInput').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('imagePreview');
            if (url) {
                preview.src = url;
            } else {
                preview.src = "https://placehold.co/200x200?text=Image+Preview";
            }
        });
    </script>
}