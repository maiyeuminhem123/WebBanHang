@model IEnumerable<Bai3_WebBanHang.Models.Category>

@{
    ViewData["Title"] = "Quản Lý Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 d-flex justify-content-between align-items-center">
    <span>@ViewData["Title"]</span>
    <a class="btn btn-success" asp-action="Create">
        <i class="fas fa-plus"></i> Thêm Danh Mục
    </a>
</h2>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width: 100px;">Hình Ảnh</th>
            <th>Tên Danh Mục</th>
            <!-- TĂNG ĐỘ RỘNG CỘT THAO TÁC -->
            <th style="width: 250px;">Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? "https://placehold.co/100x100?text=No+Image" : category.ImageUrl)" alt="@category.Name" style="width: 70px; height: 70px; object-fit: cover; border-radius: 5px;" />
                </td>
                <td>@category.Name</td>
                <td>
                    <!-- DÙNG FLEXBOX ĐỂ CÁC NÚT LUÔN THẲNG HÀNG -->
                    <div class="d-flex gap-2">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id"><i class="fas fa-edit"></i> Sửa</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@category.Id"><i class="fas fa-info-circle"></i> Chi tiết</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id"><i class="fas fa-trash-alt"></i> Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
