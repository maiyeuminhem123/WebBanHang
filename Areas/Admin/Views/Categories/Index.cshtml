@model IEnumerable<Bai3_WebBanHang.Models.Category>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Danh sách danh mục</h2>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">Tên</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm me-1" asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a class="btn btn-danger btn-sm me-1" asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                    <a class="btn btn-info btn-sm me-1" asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
