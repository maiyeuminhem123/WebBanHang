@model Bai3_WebBanHang.Models.Product

@{
    ViewData["Title"] = "Xác Nhận Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <p class="fs-5">Bạn có chắc chắn muốn xóa vĩnh viễn sản phẩm này không?</p>
            <hr />

            <div class="row">
                <div class="col-md-4">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/200x200?text=No+Image" : Model.ImageUrl)"
                         alt="Product Image"
                         class="img-fluid rounded" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Tên Sản Phẩm:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("N0") ₫</dd>

                        <dt class="col-sm-4">Danh Mục:</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>

                        <dt class="col-sm-4">Mô Tả:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Không, Quay Lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Có, Xóa Sản Phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
