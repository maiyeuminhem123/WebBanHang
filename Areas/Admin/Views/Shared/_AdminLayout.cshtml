<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bai3_WebBanHang.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            font-size: 1rem;
            background-color: #f8f9fa;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        /* Sidebar quản lý */
        .sidebar {
            background-color: #87CEEB;
            border-right: 1px solid #dee2e6;
            padding: 20px;
            width: 250px;
            flex-shrink: 0;
        }

            .sidebar h4 {
                margin-bottom: 20px;
                font-weight: bold;
                color: #343a40;
            }

            .sidebar .nav-link {
                padding: 10px 15px;
                color: #333;
                display: flex;
                align-items: center;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
                margin-bottom: 8px;
            }

                .sidebar .nav-link:hover {
                    background-color: #d3d3d3;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 1.1rem;
                }

        /* Nội dung chính */
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        /* Navbar chính */
        .navbar {
            background-color: #dc3545;
            padding: 8px 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            font-size: 1.25rem;
        }

        .navbar-toggler {
            border: none;
        }

        .nav-link {
            color: #fff !important;
            font-size: 1rem;
            margin-right: 10px;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        /* Layout container cho sidebar và main content */
        .body-container {
            display: flex;
            flex-direction: row;
            width: 100%;
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container d-flex align-items-center justify-content-between">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                🏪 Tiệm Tạp Hoá - Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="body-container">
        <div class="sidebar">
            <h4>Quản lý</h4>
            <ul class="list-unstyled">
                <li><a asp-controller="Products" asp-action="Index" class="nav-link"><i class="bi bi-box-seam"></i> Sản phẩm</a></li>
                <li><a asp-controller="Categories" asp-action="Index" class="nav-link"><i class="bi bi-list-ul"></i> Danh mục</a></li>
                <li><a asp-area="Admin" asp-controller="Order" asp-action="Index" class="nav-link"><i class="bi bi-cart-fill"></i> Đơn hàng</a></li>
                <li><a href="#" class="nav-link"><i class="bi bi-people-fill"></i> Khách hàng</a></li>
                <li><a href="#" class="nav-link"><i class="bi bi-bar-chart-fill"></i> Thống kê</a></li>
                <li><a href="#" class="nav-link"><i class="bi bi-gear-fill"></i> Cài đặt</a></li>
                <li><a asp-area="Identity" asp-page="/Account/Logout" class="nav-link text-danger"><i class="bi bi-box-arrow-left"></i> Đăng xuất</a></li>
            </ul>
        </div>

        <div class="main-content container mt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div class="container">
            © 2025 - WebBanHang | <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>