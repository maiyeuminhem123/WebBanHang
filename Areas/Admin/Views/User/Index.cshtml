@* Areas/Admin/Views/User/Index.cshtml *@
@model IEnumerable<Bai3_WebBanHang.Models.UserViewModel>

@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-light py-3">
            <h3 class="mb-0 text-primary">
                <i class="fas fa-users-cog me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Tên Đăng Nhập</th>
                        <th>Email</th>
                        <th>Vai Trò (Roles)</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
                                @* Thêm các nút hành động như Sửa, Xóa ở đây nếu muốn *@
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>