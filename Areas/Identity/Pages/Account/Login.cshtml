@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    body {
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        min-height: 100vh;
    }

    .main-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
    }

    .login-card {
        display: flex;
        border-radius: 15px;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        width: 900px;
        max-width: 100%;
        overflow: hidden;
    }

    .image-section {
        flex: 1;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        padding: 2rem;
    }

    .image-container {
        width: 100%;
        height: 220px;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .image-text {
        text-align: center;
    }

        .image-text h2 {
            font-size: 1.75rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .image-text p {
            font-size: 1rem;
            line-height: 1.5;
            opacity: 0.9;
        }

    .form-section {
        flex: 1;
        padding: 2rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        border-radius: 10px;
        font-weight: bold;
        padding: 0.75rem;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #764ba2, #667eea);
        }

    .btn-google, .btn-facebook {
        width: 100%;
        border: none;
        padding: 0.6rem;
        border-radius: 10px;
        font-weight: bold;
        color: white;
        margin-top: 0.5rem;
    }

    .btn-google {
        background-color: #db4437;
    }

        .btn-google:hover {
            background-color: #c1351d;
        }

    .btn-facebook {
        background-color: #3b5998;
    }

        .btn-facebook:hover {
            background-color: #2d4373;
        }

    .form-control {
        border-radius: 10px;
    }

    a {
        color: #764ba2;
        font-weight: bold;
    }

        a:hover {
            color: #667eea;
            text-decoration: underline;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .login-card {
            flex-direction: column;
            width: 100%;
        }

        .image-section {
            padding: 1.5rem;
        }

        .image-container {
            height: 180px;
        }
    }
</style>

<div class="main-container">
    <div class="login-card">
        <!-- Phần hình ảnh -->
        <div class="image-section">
            <div class="image-container">
                <img src="~/images/login-image.jpg" alt="Login" onerror="this.src='https://via.placeholder.com/400x300?text=Đăng+nhập'">
            </div>
            <div class="image-text">
                <h2>Chào mừng bạn trở lại!</h2>
                <p>Đăng nhập để tiếp tục mua sắm và theo dõi đơn hàng của bạn.</p>
            </div>
        </div>

        <!-- Phần form -->
        <div class="form-section">
            <h2 class="text-center mb-4">Đăng nhập</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" required placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" required placeholder="Mật khẩu" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Ghi nhớ đăng nhập</label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100">Đăng nhập</button>

                <hr />

                <!-- Đăng nhập bằng MXH -->
                <button type="button" class="btn btn-google">
                    <i class="bi bi-google"></i> Đăng nhập bằng Google
                </button>
                <button type="button" class="btn btn-facebook">
                    <i class="bi bi-facebook"></i> Đăng nhập bằng Facebook
                </button>

                <div class="text-center mt-3">
                    <a asp-page="./ForgotPassword" class="small">Quên mật khẩu?</a><br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small">Chưa có tài khoản? Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
