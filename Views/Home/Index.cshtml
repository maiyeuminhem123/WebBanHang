@model Bai3_WebBanHang.Models.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<style>
    .hero-slide {
        height: 360px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
    }

    .carousel-caption {
        background: none !important;
        padding: 20px 30px;
        border-radius: 12px;
        animation: fadeInUp 1s ease;
        max-width: 600px;
        color: white;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-warning {
        transition: all 0.3s ease;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 8px;
    }

        .btn-warning:hover {
            background-color: #d68910;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

    /* các style khác giữ nguyên như bạn đưa */

    .section-title {
        font-weight: 700;
        font-size: 1.8rem;
        margin-bottom: 30px;
        padding-bottom: 10px;
        border-bottom: 3px solid var(--primary-color);
        display: inline-block;
    }

    .category-card {
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        text-decoration: none;
        color: white;
        display: block;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }

        .category-card img {
            height: 250px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .category-card:hover img {
            transform: scale(1.05);
        }

        .category-card .card-img-overlay {
            background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
            display: flex;
            align-items: flex-end;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }

        .category-card h5 {
            font-weight: 600;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
        }

    .product-card {
        border: 1px solid #eee;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        background-color: #fff;
    }

        .product-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

    .product-image {
        height: 200px;
        object-fit: cover;
    }

    .price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #e74c3c;
    }

    .category-item-link {
        text-decoration: none;
        color: var(--text-color);
        display: inline-block;
        transition: transform 0.2s ease;
    }

        .category-item-link:hover {
            transform: translateY(-5px);
        }

    .category-image-wrapper {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 4px solid #fff;
        transition: border-color 0.3s ease;
    }

    .category-item-link:hover .category-image-wrapper {
        border-color: var(--primary-color);
    }

    .category-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .category-item-link:hover .category-image {
        transform: scale(1.1);
    }

    .category-title {
        font-weight: 600;
    }

    .category-mini {
        width: 100px;
        transition: transform 0.3s ease;
    }

        .category-mini:hover {
            transform: translateY(-4px);
        }

    .circle-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #f4f4f4;
        overflow: hidden;
        border: 2px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: border-color 0.3s;
    }

        .circle-icon img {
            width: 70%;
            height: 70%;
            object-fit: contain;
        }

    .category-mini:hover .circle-icon {
        border-color: var(--primary-color);
    }

    .promo-banner {
        border-radius: 12px;
        overflow: hidden;
        position: relative;
    }

        .promo-banner img {
            transition: transform 0.4s ease;
            display: block;
            width: 100%;
            height: auto;
            border-radius: 12px;
        }

        .promo-banner .promo-overlay {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            transition: left 0.4s ease;
            border-radius: 12px;
        }

        .promo-banner:hover img {
            transform: scale(1.05);
        }

        .promo-banner:hover .promo-overlay {
            left: 0;
        }
    .smooth-img {
        height: 400px;
        object-fit: cover;
        object-position: center;
        transition: transform 0.6s ease, opacity 0.6s ease;
        will-change: transform, opacity;
    }

    .carousel-item-next,
    .carousel-item-prev,
    .carousel-item.active {
        transition: transform 0.6s ease;
    }
</style>

<!-- Carousel -->
<div class="container mt-4">
    <div class="row gx-4">
        <!-- Carousel chiếm 8 cột -->
        <div class="col-md-8">
            <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                <div class="carousel-inner rounded shadow-sm overflow-hidden">
                    <div class="carousel-item active">
                        <img src="https://theme.hstatic.net/1000288770/1000794542/14/home_slider_image_3.jpg?v=146"
                             class="d-block w-100 smooth-img"
                             alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://theme.hstatic.net/1000288770/1000794542/14/home_slider_image_1.jpg?v=146"
                             class="d-block w-100 smooth-img"
                             alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTmCAFJ0p6D8tG4gMCuk0M2EUgsR3L4eF1zdQ&s"
                             class="d-block w-100 smooth-img"
                             alt="Slide 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <!-- Cột 4 hiển thị banner nhỏ -->
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="https://down-vn.img.susercontent.com/file/sg-11134201-22110-i2l1mpwlkckv5f"
                 class="img-fluid rounded shadow-sm"
                 alt="Banner nhỏ">
        </div>
    </div>
</div>



<div class="container py-5">
    <section class="my-5">
        <h2 class="section-title text-center">Danh Mục Nổi Bật</h2>
        <div class="d-flex flex-wrap justify-content-center gap-4 mt-4">
            @foreach (var category in Model.FeaturedCategories)
            {
                <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none text-center category-mini">
                    <div class="circle-icon mx-auto">
                        <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? $"https://placehold.co/100x100/2e8b57/fff?text={Uri.EscapeDataString(category.Name)}" : category.ImageUrl)" alt="@category.Name" class="img-fluid">
                    </div>
                    <div class="mt-2 fw-medium text-dark small">@category.Name</div>
                </a>
            }
        </div>
    </section>

    <section class="my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <a href="#" class="promo-banner d-block">
                    <img src="https://theme.hstatic.net/1000288770/1000794542/14/home_banner_image_1.jpg?v=146" class="img-fluid rounded shadow-sm" alt="Sale 1">
                    <div class="promo-overlay"></div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="#" class="promo-banner d-block">
                    <img src="https://theme.hstatic.net/1000288770/1000794542/14/home_banner_image_2.jpg?v=146" class="img-fluid rounded shadow-sm" alt="Sale 2">
                    <div class="promo-overlay"></div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="#" class="promo-banner d-block">
                    <img src="https://theme.hstatic.net/1000288770/1000794542/14/home_banner_image_3.jpg?v=146" class="img-fluid rounded shadow-sm" alt="Mega Sale">
                    <div class="promo-overlay"></div>
                </a>
            </div>
        </div>
    </section>

    <section class="my-5" id="allProductsSection">
        <h2 class="section-title">Sản Phẩm Nổi Bật</h2>
        <div class="row g-4">
            @foreach (var item in Model.FeaturedProducts)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card product-card h-100">
                        <img src="@item.ImageUrl" class="card-img-top product-image" alt="@item.Name">
                        <div class="card-body text-center d-flex flex-column p-3">
                            <h5 class="card-title flex-grow-1" style="font-size: 1rem; font-weight: 600;">@item.Name</h5>
                            <p class="price mt-2 mb-3">@item.Price.ToString("N0") ₫</p>
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" class="btn btn-success mt-auto">
                                <i class="bi bi-cart-plus-fill"></i> Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
